<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title></title>
          <%- include ('../partials/bikes_head.ejs') %>
    </head>
    <body class="shownew">

      <section class="flow">


        <%- include ('../partials/bikes_nav.ejs') %>
      </section>
      <div class="Container">

        <div class="editform">


        <form action="/bikes/<%=bike.id%>?_method=PUT" method="POST">
            <div class="form-group">
          <label for="title">Title: </label><input type="text" name="title" value="<%=bike.title%>"/><br/>
          </div>
            <div class="form-group">
          <label for="img">Image: </label><input type="text" name="img" value="<%=bike.img%>"/><br/>
          </div>
            <div class="form-group">
          <label for="manufacture">Manufacture: </label><input type="text" name="manufacture" value="<%=bike.manufacture%>"/><br/>
          </div>
            <div class="form-group">
          <label for="description">Description: </label><input type="text" name="description" value="<%=bike.description%>"/><br/>
          </div>
            <div class="form-group">
          <label for="price">Price: </label><input type="number" name="price" value="<%=bike.price%>"/><br/>
          </div>
            <div class="form-group">
          <label for="comment">Comments: </label><input type="text" name="comment" value="<%=bike.comment%>"/><br/>
          </div>
            <input type="submit"  value="Edit your Dream List Bike"/>
        </form>
        </div>
        </div>
    </body>
</html
