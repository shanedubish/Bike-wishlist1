<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include ('../partials/bikes_head.ejs') %>
  </head>
  <body>

      <%- include ('../partials/bikes_nav.ejs') %>

    <div class="container">

      <h1>Dream List</h1>




      <ul>

        <div class="row justify-content-around">


        <% for (let bike of bikes ) { %>
          <li>
            <a href="/bikes/<%=bike._id%>">
            <img src="<%= bike.img %>" alt="" class="index">
            <h3><%= bike.title %></h3>
            <form action="/bikes/<%=bike.id; %>?_method=DELETE" method="POST"">
                        <input type="submit"value="delete">
                      </form><br>


          </li>
       <% } %>
       </div>

      </ul>


    </div>
  </body>
</html
